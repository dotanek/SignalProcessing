<Window x:Class="SignalProcessing.View.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SignalProcessing.View"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="ChartWindow" Height="500" Width="1800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="450"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="800"></ColumnDefinition>
            <ColumnDefinition Width="800"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" HorizontalAlignment="Left" Margin="10" TextWrapping="Wrap" Text="TextBox" Name="SignalText" VerticalAlignment="Top" Width="200" Height="450"/>
        <lvc:CartesianChart Grid.Column="1"  Name="SignalChart" Margin="30" />
        <lvc:CartesianChart Grid.Column="2"  Name="Histogram"  Margin="30"/>
    </Grid>
</Window>
